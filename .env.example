# Telegram
TELEGRAM_BOT_TOKEN=123456:ABCDEF
SOURCE_CHAT_ID=-1001234567890
# Optional but recommended for clickable receipts:
SOURCE_CHAT_USERNAME=kasparnd
CONTROL_CHAT_ID=-1001234567891

# Optional: comma-separated list
# CONTROL_CHAT_IDS=-100123,-100456

# Storage
DB_PATH=./data/kaspa.db

# Timezone / scheduling
TZ=Australia/Sydney
DAILY_DIGEST_TIME=09:00

# Bot behavior
LATEST_DEFAULT_WINDOW_HOURS=24
POLL_TIMEOUT_SECONDS=30

# Digest sizing (extractive/LLM)
DIGEST_MAX_TOPICS=12
DIGEST_MAX_QUOTES_PER_TOPIC=3
DIGEST_MAX_MESSAGES_PER_TOPIC=80
DIGEST_QUOTE_MAX_CHARS=320

# Rollups
# If enabled, refreshes rollups for the most active topics in the digest window
# before posting scheduled digests (uses the configured LLM provider).
ROLLUP_AUTO_REFRESH_BEFORE_DIGEST=false
ROLLUP_REFRESH_MAX_TOPICS=6
ROLLUP_REFRESH_MIN_INTERVAL_SECONDS=600

# Optional: if your control room is a forum topic, set this to post daily digests into that topic.
# CONTROL_DIGEST_THREAD_ID=123

# LLM (Milestone C)
# Use OpenRouter so you can swap models easily.
LLM_PROVIDER=none
LLM_TIMEOUT_SECONDS=60

# OpenRouter (required if LLM_PROVIDER=openrouter)
# OPENROUTER_API_KEY=...
# OPENROUTER_MODEL=google/gemini-2.5-pro
# Optional:
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# OPENROUTER_SITE_URL=https://github.com/elldeeone/rnd-digest
# OPENROUTER_APP_NAME=rnd-digest

# Output control
DIGEST_LLM_MAX_TOKENS=1200
DIGEST_LLM_TEMPERATURE=0.2
ASK_LLM_MAX_TOKENS=800
ASK_LLM_TEMPERATURE=0.1
